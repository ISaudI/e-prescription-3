<!DOCTYPE html>
<html>
    <head>
        <%- include('../common/css.ejs')%>

        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
    <body>
            
        <!-- Nav Bar -->
        <%- include('../common/doctor_nav.ejs')%>
        <div class="container">
        <!-- End of Nav Bar -->
        <div class="col s12 m6"></div>
            <% for(let x=0; x<notif.length; x++){ %>
                <% let element = notif[x]; %>
                <% if(element.ok_flag == 1){ %>
                    <div class="card" style="margin-left:5%;">
                        <div class="card-content no-padding">
                            <div class="teal lighten-1 white-text" style="padding:3%;">
                                <h5><%= element.patient_name%></h5>
                                <p><%= moment(element.date_approved).format('ll')%></p>
                            </div>
                            <div style="padding:3%;">
                                <a href="/doctors/prescriptions/<%= element.presc_id%>" class="black-text">
                                    <blockquote>
                                        Your prescription has been accepted by <%= element.patient_name%> on <%= moment(element.date_approved).format('ll')%>
                                    </blockquote>
                                </a>
                            </div>
                        </div>
                    </div>                        
                <% }else if(element.cancel_flag == 1){ %>
                    <div class="card" style="margin-left:5%;">
                        <div class="card-content no-padding">
                            <div class="red lighten-1 white-text" style="padding:3%;">
                                <h5><%= element.patient_name%></h5>
                                <p><%= moment(element.date_declined).format('ll')%></p>
                            </div>
                            <div style="padding:3%;">
                                <a href="/doctors/prescriptions/<%= element.presc_id%>" class="red-text">
                                    <blockquote>
                                        Your prescription has been rejected by <%= element.patient_name%> on <%= moment(element.date_declined).format('ll')%>
                                    </blockquote>
                                </a>
                            </div>
                        </div>
                    </div>   
                <% } %>
            <% } %>
        </div>
        </div>
            <!-- end content goes here   -->
            <%- include('../common/js.ejs')%>
            <script>
            const config = {
                    user: <%- JSON.stringify(user); %>,
                    notif: <%- JSON.stringify(notif); %> 
                };
            </script>
            <!-- start your own js here -->
            <!-- end your own js here   -->
    </body>
</html>