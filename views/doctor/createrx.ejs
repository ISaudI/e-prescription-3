                <div class='input-field'>
                    <label for='notes'>notes</label>
                    <textarea id="notes" class="materialize-textarea"></textarea>
                </div>
            </div>
            <div class="modal-footer" style='position:fixed; bottom:0%;'> 
                <button id='btnAddMed' class="modal-action modal-close waves-effect waves-green btn-flat  pull-right">Add</button>
            </div>
        </div>
    </div>
    <div class="btn-footer" style='position:fixed; bottom:0%; '>
       
            <button class="btn btn-flat btn-large white-text waves-effect blue lighten-1"  style="width:50%; margin:0% 1.5% 3% 3%" id="btnSend">Send</button>        
            <!-- button for modal   -->
            <button data-target="modal1" class="btn btn-flat btn-large white-text modal-trigger waves-effect green lighten-2"  style="width:50%; margin:0% 3% 3% 1.5%">
                Add Medicine
            </button>
        
    </div>
